<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cs446_group8">

    <!-- Camera permissions for pivot   -->
    <uses-feature android:name="android.hardware.camera"
        android:required="false" />
    <!-- File sys write to save picture to hardware   -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.projects.project_details.add_crop.head_count.MonthlyHeadCountActivity" />
        <activity
            android:name=".ui.projects.project_details.ProjectDetailsActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".ui.projects.project_details.add_crop.AddCropActivity" />
        <activity android:name=".ui.projects.project_details.add_crop.crop_summary.CropSummaryActivity" />
    </application>

</manifest>