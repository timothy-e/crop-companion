                            android:layout_weight="1.2"
                            android:text="@string/nov"
                            android:textAlignment="center" />

                        <EditText
                            android:id="@+id/nov_head_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
